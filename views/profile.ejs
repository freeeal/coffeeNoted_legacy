<%- include('partials/layout-head') -%>
<%- include('partials/navbar') -%>

			<div id="content"></div>
<!-- 		<div id="reviewwrap"> -->
			<div class="container">
				<div class="row">
					<div class="col-xs-12 col-md-8">
						<% if (user) { %>
							<h1>Hi <%= user.local.username %></h1>
							<h3>What did you just drink?</h3>
						<% } %>
						<div class="review-wall">
							<form class="form-review" role="form" action="/users/<%= user.local.username %>" method="POST">
							  	<input type="text" class="form-control" name="coffeeName" placeholder="Coffee" required="true">
							    <input type="text" class="form-control" name="roaster" placeholder="Roaster" required="true">
							    <input type="text" class="form-control" name="producer" placeholder="Producer/Farmer">
							    <input type="text" class="form-control" name="region" placeholder="Region">
							    <input type="text" class="form-control" name="elevation" placeholder="Elevation (meters)">
							    <input type="text" class="form-control" name="varietals" placeholder="Varietal(s)">
							    <input type="text" class="form-control" name="harvest" placeholder="Harvest Season">
							    <input type="text" class="form-control" name="process" placeholder="Process">
							    <input type="text" class="form-control" name="note" placeholder="Notes">
							  <button type="submit" class="btn btn-warning btn-lg">Review</button>
							</form>
						</div>
					</div>
				</div><!-- /row -->
			</div><!-- /container -->
		<!-- </div> -->

		<div id='root'>
		</div>

		<script src="./js/bundle.js"></script>

